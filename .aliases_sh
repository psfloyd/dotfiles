# vim: set filetype=sh:

#Basic Aliases#{{{
alias Si="sudo -i"
alias -g S="sudo "
mkcd() { mkdir -vp $1 && cd $1 ;}
gd() { cd $1 && ls ;}
alias sdn="sudo shutdown now"
#}}}

#System command aliases#{{{
#Verbose rm, cp, mv, ln
alias rm="echo 'You should use trash-cli(rt). Or rmm for real rm'"
alias rmm="\rm -vI"

alias rt="trash-put"
alias trr="trash-restore"
alias trl="trash-list"

alias cp="cp -v"
alias mv="mv -v"
alias ln="ln -v"

#ls aliases
alias l1="ls -1"

## global aliases
alias -g "..."="../.."
alias -g "...."="../../.."
alias -g L="|less"
alias -g LL="|& less -r"
alias -g Hl=" --help |& less -r"
alias -g V="| vim -"
alias -g G="| grep "

#}}}

#Git aliases#{{{

alias gss="git status"
alias gs="git status -s"

alias -g ga="git add"
alias -g gaf="git add -f"
alias gaa="git add -A && git status -s"

alias gdi="git diff"

alias -g gp="git push "
alias gpom="git push origin master"

alias -g gcm="git commit -m"
alias gcmt="git commit -m '$( date +'%F--%R')'"

alias -g gb="git branch"
alias -g gco="git checkout"
#}}}

#pacman aliases#{{{
pccomm='pacaur '
alias -g pc="$pccomm"
alias -g pcS="$pccomm""-S"
alias -g pcSs="$pccomm""-Ss"
alias -g pcSr="$pccomm""-Sr"
alias -g pcSa="$pccomm""-Sa"
alias -g pcSy="$pccomm""-Sy"
alias -g pcQ="$pccomm""-Q"#}}}

##Misc#{{{
alias shortcutsRn="python ~/.config/Scripts/shortcuts.py"

alias srcz="source ~/.zshrc.local"

alias rng="ranger ."

function T () {
if [ -z "$TMUX" ];then
   ~/Misc/bin/tmuxSelect
fi
}

#Start VNC Server
alias vncStart="/usr/bin/x11vnc -auth guess -forever -loop -noxdamage -repeat -rfbauth /home/.common/vnc/"$USER"_passwd -rfbport 33225 -shared"

