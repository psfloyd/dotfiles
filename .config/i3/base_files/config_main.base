set $lock --no-startup-id bash ~/.config/i3/i3Scripts/multifunc.sh i3lock
set $logout --no-startup-id i3-msg exit
set $suspend  --no-startup-id bash ~/.config/i3/i3Scripts/multifunc.sh suspend
set $hibernate  --no-startup-id bash ~/.config/i3/i3Scripts/multifunc.sh hibernate
set $reboot --no-startup-id systemctl reboot
set $shutdown --no-startup-id systemctl poweroff

