#System command aliases#{{{
#Verbose rm, cp, mv, ln
alias rm="echo 'You should use trash-cli(rt). Or rmm for real rm'"
alias rmm="\rm -vI"

alias rt="trash-put"
alias trr="trash-restore"
alias trl="trash-list"

alias cp="cp -v"
alias mv="mv -v"
alias ln="ln -v"

#ls aliases
alias l1="ls -1"

## global aliases
alias -g "..."="../.."
alias -g "...."="../../.."
alias -g L="|less"
alias -g LL="|& less -r"
alias -g Hl=" --help |& less -r"
alias -g V="| vim -"
alias -g G="| grep "

#}}}

