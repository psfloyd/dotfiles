#!/bin/zsh

#echo "Generating aliases..."
python ~/.config/Scripts/shortcuts.py


zsh -c "source ~/.aliases_sh"


if [ $EUID -ne 0 ]; then
#echo "Generating i3 config..."

	if [[ "$HOST" == "arch-hp" ]]; then
		#echo "arch-hp detected"
		\ln -f ~/.config/i3/base_files/samples/config_bindings_hp.base ~/.config/i3/base_files/config_bindings.base 
		\ln -f ~/.config/i3/i3Scripts/samples/touchpad_hp.sh ~/.config/i3/i3Scripts/touchpad.sh 
		\ln -f ~/.config/i3/i3Scripts/samples/keyboard_hp.sh ~/.config/i3/i3Scripts/keyboard.sh 
	fi

	if [[ "$HOST" == "arch-lenovo" ]]; then
		#echo "arch-lenovo detected"
		\ln -f ~/.config/i3/base_files/samples/config_bindings_lenovo.base ~/.config/i3/base_files/config_bindings.base 
		\ln -f ~/.config/i3/i3Scripts/samples/touchpad_lenovo.sh ~/.config/i3/i3Scripts/touchpad.sh 
		\ln -f ~/.config/i3/i3Scripts/samples/keyboard_lenovo.sh ~/.config/i3/i3Scripts/keyboard.sh 
	fi

cat ~/.config/i3/base_files/config_main.base > ~/.config/i3/config
cat ~/.config/i3/base_files/config_bindings.base >> ~/.config/i3/config
fi
